<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
    <style>
        .content {
          max-width: 500px;
          margin: auto;
          background-color: whitesmoke;
        }
    </style>
  </head>
  <body class="content">
    <h1 style="margin-top: 30px; margin-left: 15px;">Créer une partie</h1>
    <form style="width: 400px; padding: 10px;" method="POST" action="party/list">
        <select name="category" style="margin: 10px;" class="form-select" aria-label="Default select example" required>
            <option selected>Choisir une catégorie</option>
            <option value="Music">Music</option>
            <option value="Film and TV">Film and TV</option>
            <option value="History">History</option>
          </select>
          <select name="nbq" style="margin: 10px;" class="form-select" aria-label="Default select example" required>
            <option selected>Nombre de question</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
          <select name="level" style="margin: 10px;" class="form-select" aria-label="Default select example" required>
            <option selected>Diffuclté</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
          </select>
          <button type="submit" style="margin: 10px;" type="button" class="btn btn-primary btn-lg">Créer la partie</button>
    </form>
  </body>
</html>